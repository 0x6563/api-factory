{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ESNext",
    "downlevelIteration": true,
    "declaration": true,
    "lib": [
      "ES7",
      "DOM"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}